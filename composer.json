{
  "name": "friends-of-presta/examplemodule",
  "description": "example module and get started documentation",
  "minimum-stability": "stable",
  "license": "AFL-3.0",
  "authors": [
    {
      "name": "Friends of Presta",
      "email": "infos@friendsofpresta.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "FriendsOfPresta\\ExampleModule\\": "src/",
      "FriendsOfPresta\\BaseModule\\": "dev_src/"
    }
  },
  "repositories": [{
    "type": "vcs",
    "url": "https://github.com/SebSept/autoindex",
    "package": {
      "name": "prestashop/autoindex"
    }
  }
  ],
  "require": {
    "php": ">=7.2.0"
  },
  "require-dev": {
    "prestashop/php-dev-tools": "3.*",
    "phpstan/phpstan": "^0.12.54",
    "phpro/grumphp-shim": "^1.1",
    "prestashop/autoindex": "dev-master",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "prepend-autoloader": false
  },
  "type": "prestashop-module",
  "scripts": {
    "check": [
      "grumphp run"
    ],
    "license": "header-stamp --license=dev_src/license_header.txt --exclude=vendor  --extensions=php,js,css,scss,tpl,html.twig,vue",
    "php-cs": "php-cs-fixer fix",
    "phpstan": [
      "echo 'For some reason (?) this is not working, use _PS_ROOT_DIR_=/path/to/prestashop php ./vendor/bin/phpstan.phar analyse'",
      "@putenv _PS_ROOT_DIR_=/path/to/prestashop/",
      "phpstan analyse"
    ],
    "add-index" : [
      "autoindex --exclude=vendor",
      "@license"
    ],
    "index": "@add-index",
    "post-create-project-cmd": [
      "FriendsOfPresta\\BaseModule\\Integrator::integrate"
    ]
  },
  "scripts-descriptions": {
    "check": "Start scripts triggered before a commit. Use it as often as needed :)",
    "php-cs": "fix php formating using php-cs-fixer (php-cs-fix fix)",
    "license": "Fix license header in files.",
    "post-create-project-cmd": "Launched after project create. You are not supposed to use it anymore. (This description is not displayed.)"
  },
  "bin": ["dev_src/bin/fop_module_installer"]
}
